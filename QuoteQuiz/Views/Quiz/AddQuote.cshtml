@model QuoteQuiz.Models.Quote

@{
    Layout = "_quizLayout";
}
@{ViewData["Title"] = "Add a Quote";
}
<ul class="nav nav-tabs">
    <li role="presentation"><a style="text-decoration: none; color: inherit" asp-controller="Home" asp-action="Index">The Quote Quiz</a></li>
    <li role="presentation" ><a style="text-decoration: none; color: inherit" asp-action="TakeQuiz">Take The Quiz</a></li>
    <li role="presentation" class="active"><a a style="text-decoration: none; color: inherit" asp-action="AddQuote">Submit a Quote</a></li>
</ul>

<h1>add a quote page</h1>

<form class="p-a-1" asp-action="AddQuote" method="post" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Text">Quote Text:</label>
        <div><span asp-validation-for="Text" class="text-danger"> </span></div>
        <input class="form-control" asp-for="Text" />
    </div>
    <div class="form-group">
        <label name="Character">Who said this?</label>
        <div><span asp-validation-for="Character" class="text-danger"> </span></div>
        <input class="form-control" name="Character" />
    </div>
    <div class="form-group">
        <label asp-for="Movie">In what Movie?</label>
        <div><span asp-validation-for="Movie" class="text-danger"> </span></div>
        <input class="form-control" asp-for="Movie" />
    </div>
    <div class="form-group">
        <label asp-for="Link">Youtube link proving this quote:</label>
        <div><span asp-validation-for="Link" class="text-danger"> </span></div>
        <input class="form-control" asp-for="Link" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">
            Submit Quote
        </button>
    </div>
</form>