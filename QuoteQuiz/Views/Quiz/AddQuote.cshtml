@model QuoteQuiz.Models.Quote

@{
    Layout = "_quizLayout";
}
@{ViewData["Title"] = "Add a Quote";
}
<!--Scripts for form validation-->
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

<ul class="nav nav-tabs topnav">
    <li role="presentation"><a asp-controller="Home" asp-action="Index">The Quote Quiz</a></li>
    <li role="presentation"><a asp-action="TakeQuiz">Take The Quiz</a></li>
    <li role="presentation" class="active"><a asp-action="AddQuote">Submit a Quote</a></li>
</ul>

<div class="container text-center" style="font-size:1.2em">
    <h1 style=" font-family:Acme, sans-serif">Add A New Quote</h1>

    <form class="p-a-1" asp-action="AddQuote" method="post" asp-antiforgery="true">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Text">Quote Text:</label>
            <div><span asp-validation-for="Text" class="text-danger"> </span></div>
            <input class="form-control" asp-for="Text" />
        </div>
        <div class="form-group">
            <label asp-for="Character">Who said this?</label>
            <div><span asp-validation-for="Character" class="text-danger"> </span></div>
            <input class="form-control" asp-for="Character" />
        </div>
        <div class="form-group">
            <label asp-for="Movie">In what Movie?</label>
            <div><span asp-validation-for="Movie" class="text-danger"> </span></div>
            <input class="form-control" asp-for="Movie" />
        </div>
        <div class="form-group">
            <label asp-for="Link">Youtube link proving this quote:</label>
            <div><span asp-validation-for="Link" class="text-danger"> </span></div>
            <input class="form-control" asp-for="Link" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">
                Submit Quote
            </button>
        </div>
    </form>
</div>
