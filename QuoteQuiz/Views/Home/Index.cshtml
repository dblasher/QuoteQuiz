@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quote Quiz</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="main.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container">
        <div class="jumbotron banner">
            <p>Welcome To</p>
            <h2>The Quote Quiz</h2>
        </div>
        <button type="button" class="btn btn-info btn-lg" >
            <a style= "text-decoration: none; color: inherit" asp-controller="Quiz" asp-action="TakeQuiz">
                <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Take the Quiz
            </a>
        </button>

        <button type="button" class="btn btn-success btn-lg">
            <a style= "text-decoration: none; color: inherit" asp-controller="Quiz" asp-action="AddQuote">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Submit a Quote
            </a>
        </button>

        <div class="panel panel-success">
            <div class="panel-heading"><strong>About:</strong></div>
            <div class="panel-body">
                Test your knowledge of movie quotes or submit your own! All questions are multiple choice and require you to select which
                movie the quote is from, and which character said it. Good luck!
            </div>
        </div>
    </div>
</body>
</html>
