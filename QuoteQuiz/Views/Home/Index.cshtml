
@{
    Layout = null;
    string message = "";
    if (TempData.ContainsKey("message"))
    {
        message = TempData["message"].ToString();
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quote Quiz</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="main.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container">
        <div class="jumbotron banner">
            <p>Welcome To</p>
            <h2>The Quote Quiz</h2>
        </div>
            <a class="btn btn-info btn-lg" style="text-decoration: none; color: white" asp-controller="Quiz" asp-action="TakeQuiz">
                <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Take the Quiz
            </a>

            <a  class="btn btn-success btn-lg" style= "text-decoration: none; color: white" asp-controller="Quiz" asp-action="AddQuote">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Submit a Quote
            </a>
        <!--feedback for if the user just submitted a quote-->
            <h2>@message</h2>
        <div class="panel panel-success">
            <div class="panel-heading"><strong>About:</strong></div>
            <div class="panel-body">
                Test your knowledge of movie quotes or submit your own! All questions are multiple choice and require you to select which
                movie the quote is from, and which character said it. Good luck!
            </div>
        </div>
    </div>
</body>
</html>
