
@{
    Layout = null;
    string message = "";
    if (TempData.ContainsKey("message"))
    {
        message = TempData["message"].ToString();
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quote Quiz</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://fonts.googleapis.com/css?family=Lobster|Acme|Montserrat:30" rel="stylesheet">
</head>
<body>
    <!--style="background:url('homepageImage.jpeg') no-repeat center center fixed"-->
    <div class="container-fluid">
        <div class="jumbotron banner" style="background:url(/images/homepageImage.jpeg) center; color:white">
            <h3 style="font-family: Acme, sans-serif">Welcome To</h3>
            <h1 style="font-family: Lobster">The Quote Quiz</h1>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-3" align="center">
                <a class="btn btn-info btn-lg" style="text-decoration: none; color: white" asp-controller="Quiz" asp-action="TakeQuiz">
                    <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Take the Quiz
                </a>
            </div>
            <div class="col-md-3" align="center">
                <a class="btn btn-success btn-lg" style="text-decoration: none; color: white" asp-controller="Quiz" asp-action="AddQuote">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Submit a Quote
                </a>
            </div>
            <div class="col-md-3"></div>
        </div>

        <!--feedback for if the user just submitted a quote-->
        <h2>@message</h2>
        <div class="panel panel-success">
            <div class="panel-heading"><strong>About</strong></div>
            <div class="panel-body" style="font-family: Montserrat, sans-serif; font-size:1.5em">
                Test your knowledge of movie quotes or submit your own! All questions are multiple choice and require you to select which
                movie the quote is from, and which character said it. Good luck!<br /><br />
                Known issues: <br />
                <ul>
                    <li> Quote submission feedback not showing on live site</li>
                    <li>need to transform quotes to lowercase before storing and comparing</li>
                    <li>Site is largely unstyled and not mobile friendly</li>
                    <li>Figure out how to update boostrap to v4.0</li>
                </ul>
            </div>
        </div>
    </div>
</body>
</html>
